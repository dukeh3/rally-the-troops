//- vim:ts=4:sw=4:
doctype html
html
	head
		include head
		title Change password
	body
		include header
		article
			h1 Change password
			if flash
				p.error= flash

			form(method="post" action="/change_password")
				p Name: #{user.name}
				p Mail: #{user.mail}
				p
					label Old Password:
						br
						input(type="password" name="password" required)
				p
					label New Password:
						br
						input(type="password" name="newpass" required)
				p
					button(type="submit") Change password
